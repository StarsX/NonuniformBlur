//--------------------------------------------------------------------------------------
// Structure
//--------------------------------------------------------------------------------------
struct VSOut
{
	float4 Pos	: SV_POSITION;
	float2 UV	: TEXCOORD;
};

//--------------------------------------------------------------------------------------
// Vertex shader used for screen-space post-processing
//--------------------------------------------------------------------------------------
VSOut main(uint vid : SV_VertexID)
{
	VSOut output;

	output.UV = float2((vid << 1) & 2, vid & 2);
	output.Pos = float4(output.UV * float2(2.0, -2.0) + float2(-1.0, 1.0), 1.0.xx);

	return output;
}
